{
    "version": 1,
    "formatters": {
        "default": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
            "datefmt":"%Y-%m-%d %H:%M:%S"
        },
        "discord_file": {
            "format": "[%(asctime)s] %(levelname)-8s %(name)s: %(message)s",
            "datefmt":"%Y-%m-%d %H:%M:%S"
        },
        "discord_stream": {
            "()": "colorlog.ColoredFormatter",
            "format": "%(light_black)s%(asctime)s%(reset)s %(log_color)s%(levelname)-8s%(reset)s %(purple)s%(name)s%(reset)s: %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S",
            "log_colors": {
                "DEBUG": "cyan",
                "INFO": "blue",
                "WARNING": "bold_yellow",
                "ERROR": "red",
                "CRITICAL": "bold_red"
            },
            "secondary_log_colors": {}
        }
    },
    "handlers": {
        "console":{
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "discord_stream"
        },
        "file": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "discord_file",
            "filename": "data/logs/discord.log",
            "mode": "w",
            "encoding": "utf-8"
        }
    },
    "loggers": {
        "grumpy": {
            "level": "INFO",
            "handlers": ["file", "console"],
            "propagate": false
        },
        "discord": {
            "level": "INFO",
            "handlers": ["file"],
            "propagate": false
        }
    }
}