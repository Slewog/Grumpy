{
    "version": 1,
    "formatters": {
        "default": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        },
        "custom": {
            "format": "%(asctime)s %(levelname)s %(name)s: %(message)s",
            "datefmt":"%Y-%m-%d %H:%M:%S"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "custom"
        },
        "bot": {
            "class": "logging.FileHandler",
            "level": "INFO",
            "formatter": "custom",
            "filename": "data/logs/grumpy.log",
            "mode": "w",
            "encoding": "utf-8"
        },
        "discord": {
            "class": "logging.FileHandler",
            "level": "INFO",
            "formatter": "custom",
            "filename": "data/logs/discord.log",
            "mode": "w",
            "encoding": "utf-8"
        }
    },
    "loggers": {
        "BOT": {
            "level": "INFO",
            "handlers": ["bot", "console"],
            "propagate": false
        },
        "BOT.COGS": {
            "level": "INFO",
            "handlers": ["console"]
        },
        "discord": {
            "level": "INFO",
            "handlers": ["discord"]
        }
    }
}