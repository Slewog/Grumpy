{
    "version": 1,
    "formatters": {
        "default": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        },
        "custom": {
            "format": "[%(asctime)s] %(levelname)s %(name)s: %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "custom"
        },
        "file": {
            "class": "logging.FileHandler",
            "level": "INFO",
            "formatter": "custom",
            "filename": "data/logs/grumpy.log",
            "mode": "a",
            "encoding": "utf-8"
        },
        "discord": {
            "class": "logging.FileHandler",
            "level": "INFO",
            "formatter": "custom",
            "filename": "data/logs/discord.log",
            "mode": "w",
            "encoding": "utf-8"
        }
    },
    "loggers": {
        "BOT": {
            "level": "DEBUG",
            "handlers": ["file", "console"],
            "propagate": false
        },
        "BOT.COGS": {
            "level": "DEBUG",
            "handlers": ["console"]
        },
        "discord": {
            "level": "INFO",
            "handlers": ["console", "discord"]
        },
        "discord.http": {
            "level": "INFO",
            "handlers": ["console", "discord"]
        },
        "discord.client": {
            "level": "INFO",
            "handlers": ["console", "discord"]
        },
        "discord.state": {
            "level": "INFO",
            "handlers": ["console", "discord"]
        },
        "discord.gateway": {
            "level": "WARNING",
            "handlers": ["discord"]
        }
    }
}